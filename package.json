{
    "name": "todo-backend",
    "version": "0.0.3",
    "private": true,
    "main": "build/main.js",
    "engines": {
        "node": ">=16.13.0"
    },
    "scripts": {
        "build": "tsc",
        "start": "node -r tsconfig-paths/register ./build/main.js",
        "dev": "nodemon ./src/main.ts",
        "test": "jest --coverage --forceExit ./test/services",
        "test:integration": "jest --coverage --forceExit ./test/integration",
        "test:ci": "jest --ci --passWithNoTests",
        "test:coverage": "jest --ci --passWithNoTests --coverage",
        "test:watch": "jest --coverage --watchAll",
        "test:open": "jest --coverage --detectOpenHandles",
        "clean": "rm -rf coverage build",
        "lint": "tsc && eslint \"**/*.{js,ts}\" --fix",
        "format": "prettier --write **/**/*.ts",
        "prepare": "husky install"
    },
    "dependencies": {
        "dotenv": "10.0.0",
        "express": "4.17.1",
        "express-swagger-generator": "1.1.17",
        "express-validator": "6.14.2",
        "fp-ts": "^2.12.3",
        "handy-redis": "^2.3.1",
        "nanoid": "3.3.4",
        "pino": "7.6.4",
        "pino-pretty": "7.5.0",
        "redis": "3.1.2",
        "ts-node": "10.9.1",
        "tsconfig-paths": "3.11.0"
    },
    "devDependencies": {
        "@types/express": "4.17.13",
        "@types/jest": "27.0.2",
        "@typescript-eslint/eslint-plugin": "5.2.0",
        "@typescript-eslint/parser": "5.2.0",
        "axios-mock-adapter": "1.20.0",
        "eslint": "8.1.0",
        "eslint-config-airbnb": "18.2.1",
        "eslint-config-prettier": "8.3.0",
        "eslint-import-resolver-typescript": "2.5.0",
        "eslint-plugin-import": "2.25.2",
        "eslint-plugin-prettier": "4.0.0",
        "husky": "7.0.4",
        "jest": "27.3.1",
        "nodemon": "2.0.14",
        "prettier": "2.4.1",
        "request": "^2.88.2",
        "swagger-ui-express": "4.1.6",
        "testcontainers": "^8.15.0",
        "ts-jest": "27.0.7",
        "ts-mockito": "2.6.1",
        "typescript": "4.4.4"
    },
    "lint-staged": {
        "./**/**/*.{ts,js,jsx,tsx}": [
            "yarn lint --fix",
            "yarn format"
        ]
    }
}
